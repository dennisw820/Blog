<%- include('partials/header'); -%>
<%- include('partials/searchBar.ejs') -%>
    <% posts.forEach(function (newPost) { %>
        <div class="contain m-4">
            <% posts[newPost] %>
            <div class="post d-flex p-4 shadow rounded">
                <div class="post-img d-inline col-md-4">
                    <img class="p-2 rounded h-100 w-100" src="<% newPost.imgUpload %> https://images.pexels.com/photos/1103833/pexels-photo-1103833.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="">
                </div>
                <div id="content" class="p-2 px-3 col-md-8">
                    <h1 class="p-1"> <% newPost.title %> Title</h1>
                    <span class="mb-2 p-1 h5"> <%=  %> August 5, 2021</span>
                    <p class="p-1"> <% newPost.content %> Lorem ipsum dolor sit amet consectetur, adipisicing elit. Repellat recusandae laudantium fugit numquam optio consectetur cum, dicta reiciendis at! Cum aut quos corporis aliquid? Non eveniet minus autem quos sit?</p>
                    <a class="btn btn-dark p-3 mx-1" href="#">View post</a>
                </div>
            </div>
        </div>
    <% }) %>
<%- include('partials/footer'); -%>