<%- include('partials/header'); -%>
<h5 class="bg-success text-light text-center p-4">Your user registration was successful!</h5>
    <div class="container">
        <center class="pb-4">
            <h1 class="title p-3 m-2">Sign Up</h1>
            <p class="px-4">To get started, fill out the form below to create an account.</p>
        </center>
        <div class="contact">
            <form action="/signup" method="POST" class="">
                <div class="d-flex justify-content-evenly mb-3 row g-2">
                    <div class="form-floating w-50">
                        <input name="fName" class="form-control rounded" type="text" placeholder="First Name" minlength="1" maxlength="100" required>
                        <label for="fName" class="foating-input">First Name</label>
                    </div>
                    <div class="form-floating w-50">
                        <input name="lName" class="form-control rounded" type="text" placeholder="Last Name" minlength="1" maxlength="100" required>
                        <label for="lName" class="foating-input">Last Name</label>
                    </div>
                </div>
                <div class="d-flex justify-content-evenly mb-3 row g-2">
                    <div class="form-floating w-50">
                        <input name="phoneNumber" class="form-control rounded" type="tel" placeholder="Phone Number" minlength="1" maxlength="100" required>
                        <label for="phoneNumber" class="foating-input">Phone Number</label>
                    </div>
                    <div class="form-floating w-50">
                        <input name="email" class="form-control rounded" type="email" placeholder="Email" minlength="1" maxlength="100" required>
                        <label for="email" class="foating-input">Email</label>
                    </div>
                </div>
                <div class="form-floating mb-4">
                    <input name="password" class="form-control rounded" type="password" placeholder="Password" minlength="1" maxlength="15" required>
                    <label for="password" class="foating-input">Password</label>
                </div>
                <div class="form-floating mb-4">
                    <input name="confirmPassword" class="form-control rounded" type="password" placeholder="Confirm Password" minlength="1" maxlength="15" required>
                    <label for="confirmPassword" class="foating-input">Confirm Password</label>
                </div>
                <button class="btn btn-block btn-dark p-4 w-100">Register</button>
            </form>
        </div>
    </div>
<%- include('partials/footer'); -%>